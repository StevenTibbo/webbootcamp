
<% include ../partials/header %>
<h1 style="text-align: center;">Create a new Campground</h1>

<div class="row">
     <div class="container">
          <div style="width: 30%; margin: 25px auto;">
                <form action="/campgrounds" method="POST">
                     <div class="form-group"><input class="form-control" type="text" name="campground[name]" placeholder="name"></input></div>
                     <div class="form-group"><input class="form-control" type="text" name="campground[image]" placeholder="image url"></input></div>
                     <div class="form-group"><input class="form-control" type="text" name="campground[description]" placeholder="description"></input></div>
                     <div class="form-group"><input class="form-control" type="number" name="campground[price]" placeholder="price" min="0.01" step="0.01"></input></div>
                     <div class="form-group"> <button class="btn btn-lg btn-default btn-primary">Submit</button></div>
               </form>  
               <a href="/campgrounds">back</a>
          </div>
     </div>
</div>

<% include ../partials/footer %>