
<% include ../partials/header %>
<h1 style="text-align: center;">Edit <%=camp.name%></h1>

<div class="row">
     <div class="container">
          <div style="width: 30%; margin: 25px auto;">
                <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
                     <div class="form-group"><input class="form-control" type="text" name="camp[name]" value="<%=camp.name%>"></input></div>
                     <div class="form-group"><input class="form-control" type="text" name="camp[image]" value="<%=camp.image%>"></input></div>
                     <div class="form-group"><input class="form-control" type="text" name="camp[description]" value="<%=camp.description%>"></input></div>
                     <div class="form-group"><input class="form-control" type="number" name="camp[price]" value="<%=camp.price%> min="0.01" step="0.01"></input></div>
                     <div class="form-group"> <button class="btn btn-lg btn-default btn-primary">Submit</button></div>
               </form>  
               <a href="/campgrounds">back</a>
          </div>
     </div>
</div>

<% include ../partials/footer %>