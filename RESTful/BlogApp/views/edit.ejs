<% include ./partials/header %>

<div class="ui main text container segment">
     <div class="ui huge header">Edit Blog</div>
     
     <form class="ui form" action="/blog/<%= blog._id%>?_method=PUT" method="POST">
          <div class="field">
               <lable>Title</lable>
               <input type="text" name="blog[title]" placeholder="title" value="<%=blog.title%>">
          </div>
          <div class="field">
               <lable>Image</lable>
               <input type="text" name="blog[image]" placeholder="image" value="<%=blog.image%>">
          </div>
          <div class="field">
               <lable>Blog content</lable>
               <textarea name="blog[body]" id="" cols="30" rows="10"><%=blog.body%></textarea>
          </div>
          <input class="ui violet big basic button" type="submit">
     </form>
</div>


<% include ./partials/footer %>